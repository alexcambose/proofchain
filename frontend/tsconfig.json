{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "transform": "typescript-plugin-styled-components",
        "type": "config",
        "minify": true,
        "ssr": true
      }
    ],
    "paths": {
      "@state/*": [
        "./state/*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@containers/*": [
        "./containers/*"
      ],
      "@assets/*": [
        "./assets/*"
      ],
      "@utils/*": [
        "./utils/*"
      ],
      "@types/*": [
        "./types/*"
      ],
      "@constants": [
        "./constants.ts"
      ]
    }
  },
  // "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
